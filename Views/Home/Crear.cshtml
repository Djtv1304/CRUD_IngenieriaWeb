@model CRUD_IngenieriaWeb.Models.Vacante

@{
    ViewData["Title"] = "Crear Vacante";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="mb-3">
        <label>Titulo:</label>
        <input asp-for="titulo" class="form-control" placeholder="Ingrese el titulo">
    </div>
    <div class="mb-3">
        <label>Descripción:</label>
        <input asp-for="descripcion" class="form-control" placeholder="Ingrese la descripción">
    </div>
    <div class="mb-3">
        <label>Requisitos:</label>
        <input asp-for="requisitos" class="form-control" placeholder="Ingrese un requisito">
    </div>
    <div class="mb-3">
        <label>Fecha Publicación:</label>
        <input asp-for="fecha_publicacion" class="form-control" placeholder="Ingrese la fecha de publicación que se reflejará">
    </div>
    <div class="mb-3">
        <label>Estado:</label>
        <input asp-for="estado" class="form-control" placeholder="Ingrese el estado de la vacante (Activa o Inactiva)">
    </div>

    <div class="row col-6">
        <div class="col-6 col-md-6">
            <button type="submit" class="btn btn-primary">Crear</button>
        </div>
        <div class="col-6 col-md-6">
            <a asp-action="Index" class="btn btn-outline-secondary">Regresar</a>
        </div>
    </div>
</form>
